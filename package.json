{
  "name": "based-chess",
  "private": true,
  "type": "module",
  "scripts": {
    "build:worker": "opennextjs-cloudflare",
    "dev:worker": "wrangler dev --port 8771",
    "preview:worker": "npm run build:worker && npm run dev:worker",
    "deploy:worker": "npm run build:worker && wrangler deploy",
    "build:staging": "vite build -- -e staging",
    "deploy": "npm run build && wrangler deploy",
    "lintAndSafeFix": "biome lint --write",
    "lintAndHardFix": "npx @biomejs/biome check --write",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "react-router typegen && tsc -b",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
  },
  "dependencies": {
    "@farcaster/frame-sdk": "^0.0.29",
    "@farcaster/frame-wagmi-connector": "^0.0.19",
    "@rainbow-me/rainbowkit": "^2.2.4",
    "@sentry/cli": "^2.41.1",
    "@sentry/react": "^8.51.0",
    "@sentry/vite-plugin": "^3.1.0",
    "@tanstack/react-query": "^5.63.0",
    "@wagmi/core": "^2.16.5",
    "chess.js": "^1.0.0",
    "html2canvas": "^1.4.1",
    "isbot": "^5.1.17",
    "next": "15.1.7",
    "react": "^19.0.0",
    "react-chessboard": "^4.7.2",
    "react-dom": "^19.0.0",
    "viem": "^2.23.5",
    "wagmi": "^2.14.12"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "^4.20250303.0",
    "@hiogawa/vite-node-miniflare": "0.1.1",
    "@opennextjs/cloudflare": "^0.5.8",
    "@types/node": "^20.17.14",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.21.0",
    "eslint-config-next": "^15.2.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "wrangler": "^3.114.0"
  }
}
